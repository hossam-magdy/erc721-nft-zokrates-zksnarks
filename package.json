{
  "name": "capstone",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "lite-server",
    "format": "prettier --ignore-path '.gitignore' --write '**/*.{sol,js,json,md}'",
    "test": "truffle test",
    "zokrates": "yarn zokrates-run && yarn zokrates-mv && yarn format",
    "zokrates-run": "docker run -it -v ${PWD}/zokrates/code:/home/zokrates/code zokrates/zokrates:0.7.10 sh /home/zokrates/code/.run-zokrates.sh",
    "zokrates-mv": "mv zokrates/code/verifier.sol contracts/Verifier.sol && mv zokrates/code/proof.json test/proof.json",
    "zokrates-clean": "git clean -xdf ./zokrates/code"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "lite-server": "^2.6.1"
  },
  "dependencies": {
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19"
  }
}
